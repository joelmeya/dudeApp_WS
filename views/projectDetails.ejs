<%- contentFor('body') %>
<div class="project-details-content">
    <div class="page-header">
        <div class="header-content">
            <h1>Document Projects</h1>
        </div>
    </div>
    

    
    <% if (typeof formError !== 'undefined' && formError) { %>
    <div class="notification error" id="errorNotification">
        <%= formError %>
    </div>
    <% } %>

    <!-- Project Details Card -->
    <div class="project-card">
        <div class="project-header">
            <div class="project-info">
                <div class="project-title-section">
                    <h2>Project Details</h2>
                </div>
                <div class="completion-info">
                    <div class="project-progress">
                        <span>Project %:</span>
                        <span class="progress-badge complete">100.00% Completed</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="project-body">
            <form id="projectForm" method="post">
                <div class="form-row">
                    <div class="form-group">
                        <label for="projectName">Project Name</label>
                        <input type="text" id="projectName" name="projectName" class="form-control" value="Pacucoa_Aug2024" readonly>
                    </div>
                    <div class="form-group">
                        <label for="projectType">Project Type</label>
                        <input type="text" id="projectType" name="projectType" class="form-control" value="PACUCOA" readonly>
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status" name="status" class="form-control">
                            <option value="">Select Status</option>
                            <option value="For Review" selected>For Review - Document Admin</option>
                            <option value="New">New</option>
                            <option value="Ongoing">Ongoing</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="targetDate">Target Completion Date</label>
                        <input type="date" id="targetDate" name="targetDate" class="form-control" value="2024-07-25">
                    </div>
                </div>

                <!-- Assignee/s, Reviewer/s, and Accreditor/s sections removed as requested -->

                <div class="form-row">
                    <div class="form-group full-width">
                        <label for="details">Other Details/Info</label>
                        <textarea id="details" name="details" class="form-control">Test Message</textarea>
                    </div>
                </div>

                <!-- Document URL section removed as requested -->

                <div class="form-actions">
                    <button type="submit" class="btn-save">SAVE CHANGES</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Task Section -->
    <div class="task-section">
        <div class="task-card">
            <div class="task-header">
                <h3>Project Tasks</h3>
            </div>
            <div class="task-body">
                <table class="task-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Percentage</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Task 1</td>
                            <td>Complete initial documentation</td>
                            <td><span class="status-badge complete">Completed</span></td>
                            <td>100%</td>
                            <td class="actions-cell">
                                <button class="btn-icon" title="Edit" onclick="openTaskModal(this)"><i class="fas fa-edit"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>Task 2</td>
                            <td>Review documentation with stakeholders</td>
                            <td><span class="status-badge ongoing">Ongoing</span></td>
                            <td>65%</td>
                            <td class="actions-cell">
                                <button class="btn-icon" title="Edit" onclick="openTaskModal(this)"><i class="fas fa-edit"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>Task 3</td>
                            <td>Finalize documentation for submission</td>
                            <td><span class="status-badge new">New</span></td>
                            <td>0%</td>
                            <td class="actions-cell">
                                <button class="btn-icon" title="Edit" onclick="openTaskModal(this)"><i class="fas fa-edit"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<!-- Task Update Form Modal -->
<div class="modal" id="updateTaskModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="taskModalTitle">Task Details</h3>
            <button class="close-modal" onclick="closeTaskModal()">&times;</button>
        </div>
        <div class="modal-body">
            <form id="taskUpdateForm" method="post" action="/project-details/<%= projectId %>/update-task">
                <input type="hidden" id="taskId" name="taskId" value="">
                
                <div class="task-form-container">
                    <!-- Top Row - Task Details and Documents side by side -->
                    <div class="task-top-row">
                        <!-- Left Column - Task Details -->
                        <div class="task-details-column">
                            <div class="task-section">
                                <div class="section-header">
                                    <h4>Task Details</h4>
                                </div>
                                <div class="task-details-content">

                                    
                                    <div class="form-group">
                                        <label for="taskStatus">Status</label>
                                        <div class="select-wrapper">
                                            <select id="taskStatus" name="taskStatus" class="form-control" required>
                                                <option value="New">New</option>
                                                <option value="Ongoing">Ongoing</option>
                                                <option value="Completed">Completed</option>
                                                <option value="For Review">For Review</option>
                                            </select>
                                        </div>
                                    </div>
                                    

                                    
                                    <div class="form-group">
                                        <label for="percentageDropdown">Percentage Completed:</label>
                                        <div class="select-wrapper">
                                            <select id="percentageDropdown" name="percentageDropdown" class="form-control" required>
                                                <option value="0">0%</option>
                                                <option value="25">25%</option>
                                                <option value="50">50%</option>
                                                <option value="75">75%</option>
                                                <option value="100">100%</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <!-- User Assignment Section -->
                                    <div class="form-group">
                                        <label for="assignedUsers">Assigned Users</label>
                                        <div class="assigned-users-container">
                                            <div class="select-wrapper">
                                                <select id="assignedUsersDropdown" class="form-control">
                                                    <option value="" disabled selected>Select a user</option>
                                                    <% if (typeof users !== 'undefined' && users && users.length > 0) { %>
                                                        <% users.forEach(function(user) { %>
                                                            <option value="<%= user.id %>"><%= user.name %> (<%= user.role %>)</option>
                                                        <% }); %>
                                                    <% } %>
                                                </select>
                                                <button type="button" class="btn-sm btn-primary" id="addAssignedUser">
                                                    <i class="fas fa-plus"></i> Add
                                                </button>
                                            </div>
                                            
                                            <div class="assigned-users-list">
                                                <ul id="assignedUsersList">
                                                    <!-- Assigned users will be displayed here -->
                                                </ul>
                                                <input type="hidden" id="assignedUsersIds" name="assignedUsersIds" value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Right Column - Task Documents -->
                        <div class="task-documents-column">
                            <div class="task-section">
                                <div class="section-header">
                                    <h4>Task Documents</h4>
                                    <button type="button" class="btn-sm btn-primary">Add Document</button>
                                </div>
                                <div class="documents-table-container">
                                    <table class="documents-table">
                                        <thead>
                                            <tr>
                                                <th>Document Name</th>
                                                <th>Document URL</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Document 1</td>
                                                <td>
                                                    <input type="text" id="documentUrl1" name="documentUrl1" class="form-control" placeholder="Enter document URL">
                                                </td>
                                                <td><button type="button" class="btn-sm btn-secondary">View</button></td>
                                            </tr>
                                            <tr>
                                                <td>Document 2</td>
                                                <td>
                                                    <input type="text" id="documentUrl2" name="documentUrl2" class="form-control" placeholder="Enter document URL">
                                                </td>
                                                <td><button type="button" class="btn-sm btn-secondary">View</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Bottom Row - Task Feedbacks (full width) -->
                    <div class="task-bottom-row">
                        <div class="task-section">
                            <div class="section-header">
                                <h4>Task Feedbacks</h4>
                                <button type="button" class="btn-sm btn-primary">Add Feedback</button>
                            </div>
                            <div class="documents-table-container">
                                <table class="documents-table">
                                    <thead>
                                        <tr>
                                            <th>From</th>
                                            <th>Feedback Details</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Joel Eya</td>
                                            <td>Http...</td>
                                            <td><button type="button" class="btn-sm btn-secondary">View</button></td>
                                        </tr>
                                        <tr>
                                            <td>Jhen Eya</td>
                                            <td>HTTP...</td>
                                            <td><button type="button" class="btn-sm btn-secondary">View</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeTaskModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Overlay -->
<div class="modal-overlay" id="modalOverlay" onclick="closeTaskModal()"></div>
