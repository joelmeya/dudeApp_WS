<div class="sidebar">
    <div class="sidebar-header">
        <h2 class="app-title">DUDE</h2>
        <p class="app-subtitle">Decentralized University Document Ecosystem</p>
        <button class="sidebar-toggle mobile-only">
            <span class="hamburger-icon">â˜°</span>
        </button>
    </div>
    
    <nav class="sidebar-menu">
        <ul>
            <li class="<%= activePage === 'dashboard' ? 'active' : '' %>">
                <a href="/dashboard">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="<%= activePage === 'users' ? 'active' : '' %>">
                <a href="/users">
                    <i class="fas fa-users"></i>
                    <span>User Management</span>
                </a>
            </li>
            <li class="<%= activePage === 'documents' ? 'active' : '' %>">
                <a href="/documents">
                    <i class="fas fa-file-alt"></i>
                    <span>Document Management</span>
                </a>
            </li>
            <li class="<%= activePage === 'accreditor' ? 'active' : '' %>">
                <a href="/accreditor">
                    <i class="fas fa-clipboard-check"></i>
                    <span>Accreditor View</span>
                </a>
            </li>
            <li class="<%= activePage === 'reports' ? 'active' : '' %>">
                <a href="/reports">
                    <i class="fas fa-chart-bar"></i>
                    <span>Reports</span>
                </a>
            </li>
            <li class="<%= activePage === 'transactions' ? 'active' : '' %>">
                <a href="/transactions">
                    <i class="fas fa-exchange-alt"></i>
                    <span>Transactions</span>
                </a>
            </li>
            <!-- Settings menu item hidden temporarily -->
            <li class="<%= activePage === 'settings' ? 'active' : '' %>" style="display: none;">
                <a href="/settings">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="sidebar-footer">
        <div class="user-profile">
            <div class="user-details">
                <span class="user-name"><%= typeof user !== 'undefined' && user && user.name ? user.name : 'Anonymous User' %></span>
                <span class="user-email"><%= typeof user !== 'undefined' && user && user.email ? user.email : 'user@example.com' %></span>
                <span class="user-role"><%= typeof user !== 'undefined' && user && user.role ? user.role : 'User' %></span>
            </div>
        </div>
        
        <div class="sidebar-actions">
            <button id="logout-btn" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </button>
            <button class="toggle-theme theme-btn">
                <i class="fas fa-moon"></i>
                <span>Theme</span>
            </button>
        </div>
    </div>
</div>